<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vc"
    tools:context=".MainActivity">

    <!-- Título -->

    <TextView
        android:id="@+id/appName"
        android:layout_width="327dp"
        android:layout_height="89dp"

        android:layout_centerHorizontal="true"

        android:fontFamily="@font/angkor"
        android:padding="16dp"

        android:shadowColor="@color/color9"
        android:shadowDx="5"
        android:shadowDy="12"
        android:shadowRadius="10"
        android:text="Registrese"
        android:textAlignment="center"
        android:textColor="@color/color6"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Botón de Registrar -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/appName"
        tools:layout_editor_absoluteX="-73dp">


        <!-- Campo de Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="@color/color11">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C5D1547F"

                android:fontFamily="@font/agbalumo"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:textColor="@color/color2"
                android:textColorHighlight="@color/color4"
                android:textColorHint="@color/color4" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo de Apellido -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lastNameInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C5D1547F"
                android:fontFamily="@font/agbalumo"
                android:hint="Apellido"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo de Fecha de Nacimiento -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dateInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C5D1547F"
                android:focusable="true"
                android:fontFamily="@font/agbalumo"
                android:hint="Fecha de Nacimiento"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Menú Desplegable: Objetivo -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/goalInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C5D1547F"
                android:focusable="true"
                android:fontFamily="@font/agbalumo"
                android:hint="Objetivo" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Radio Group para opciones de objetivo de peso -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbBajarPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#812196F3"
                android:fontFamily="@font/agbalumo"
                android:padding="10dp"
                android:text="Bajar de peso"
                android:textColorLink="#4CAF50" />

            <RadioButton
                android:id="@+id/rbSubirPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#812196F3"
                android:fontFamily="@font/agbalumo"
                android:padding="10dp"
                android:text="Subir de peso"
                android:textColorLink="#4CAF50" />

            <RadioButton
                android:id="@+id/rbMantenerPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#812196F3"
                android:fontFamily="@font/agbalumo"
                android:padding="10dp"
                android:text="Mantener peso"
                android:textColorLink="#36CA1C" />
        </RadioGroup>


    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="171dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aclonica"
        android:text="Guardar Secion"
        android:textAlignment="center"
        android:textColor="@color/color4"
        android:textColorLink="#E71341"
        app:buttonIconTint="#A12196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/boton"
        android:text="Registrar"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>