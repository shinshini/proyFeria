<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main"
        android:padding="16dp"
        tools:context=".mantenerpeso.receta5m"
        android:background="@drawable/fondoe">

        <!-- Header -->


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/color7"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_recetas_faciles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECETAS FÁCILES"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Imagen principal de receta -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/iv_receta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rollito"
                android:scaleType="centerCrop" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Título de receta -->
        <TextView
            android:id="@+id/receta5m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROLLITOS DE POLLO CON VERDURAS "
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/borde_black"/>

        <!-- Información (Tiempo, Raciones, Dificultad) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/borde_black"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Tiempo -->
            <LinearLayout

                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:background="#77180A0A"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borde_black"
                    android:fontFamily="@font/adlam_display"
                    android:text="TIEMPO"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/reloj" />

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"

                    android:text="45 minutos"
                    android:textAlignment="center"
                    android:fontFamily="@font/adlam_display"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Raciones -->
            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:background="#77180A0A"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="RACIONES"
                    android:background="@drawable/borde_black"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    />

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="35dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/usu" />

                <TextView
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="4 personas"
                    android:textAlignment="center"
                    android:fontFamily="@font/adlam_display"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Dificultad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:background="#77180A0A"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="DIFICULTAD"
                    android:background="@drawable/borde_black"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="34dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/utin" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:text="Intermedio"
                    android:textAlignment="center"
                    android:fontFamily="@font/adlam_display"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INGREDIENTES:"
            android:fontFamily="@font/adlam_display"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- Ingredientes y Tip Experto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Ingredientes -->
            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:background="#337E37"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/tener" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="4 filetes de pechuga de pollo"
                        android:fontFamily="@font/adlam_display"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/tener" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="1 zanahoria grande"
                        android:fontFamily="@font/adlam_display"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/tener" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="1 calabacín"
                        android:fontFamily="@font/adlam_display"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/tener" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="1 pimiento rojo"
                        android:fontFamily="@font/adlam_display"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/tener" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="1 cebolla pequeña"
                        android:fontFamily="@font/adlam_display"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:src="@drawable/tener" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="1 diente de ajo"
                        android:fontFamily="@font/adlam_display"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:src="@drawable/tener" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="1 cucharada de aceite de oliva"
                        android:fontFamily="@font/adlam_display"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/tener" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Sal y pimienta al gusto"
                        android:fontFamily="@font/adlam_display"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/tener" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Especias (opcional): orégano, tomillo, pimentón"
                        android:fontFamily="@font/adlam_display"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/tener" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Palillos de madera para cerrar los rollitos"
                        android:fontFamily="@font/adlam_display"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

            <!-- Tip Experto -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="296dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:padding="8dp"

                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="296dp"
                    android:layout_margin="5dp"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@color/color47"
                        android:text="Tip Experto"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="245dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/color48"
                        android:fontFamily="@font/adlam_display"
                        android:padding="10dp"
                        android:text="Esta receta es saludable porque es baja en calorías y grasas, rica en proteínas del pollo, y aporta vitaminas, minerales y fibra de las verduras. Ayuda a la digestión, fortalece el sistema inmunológico y contribuye a una alimentación balanceada."
                        android:textAlignment="center"
                        android:textColor="@color/color29" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Elaboración -->
        <TextView
            android:layout_width="227dp"
            android:layout_height="40dp"
            android:fontFamily="@font/adlam_display"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="ELABORACIÓN:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/color47"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Paso 1: Saltea las verduras: Corta zanahoria, calabacín, pimiento y cebolla en tiras. Saltea con ajo en aceite de oliva durante 5-7 minutos. Sazona y deja enfriar."
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Paso 2:
Prepara el pollo: Aplana los filetes de pollo si es necesario. Coloca una porción de verduras en el centro y enrolla, asegurando con palillos."
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Paso 3:Hornea: Precalienta el horno a 180°C. Coloca los rollitos en una fuente y hornea durante 25-30 minutos, volteando a mitad de cocción."
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Paso 4:Dora opcionalmente: Activa el grill los últimos 5 minutos para dorar mejor los rollitos."
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Más recetas -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_mas_recetas5M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/boton2"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Más recetas"
            android:textColor="@android:color/white"
            app:backgroundTint="@null" />

    </LinearLayout>
</ScrollView>