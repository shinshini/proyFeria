<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    tools:context=".mantenerpeso.receta1m"
    android:background="@color/color4">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color7"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_recetas_faciles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECETAS FÁCILES"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Imagen principal de receta -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/iv_receta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ra"
            android:scaleType="centerCrop" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Título de receta -->
    <TextView
        android:id="@+id/tv_pan_huevos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAN CON HUEVOS Y AGUACATE"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Información (Tiempo, Raciones, Dificultad) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Tiempo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ra" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="10 min"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Raciones -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ra" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 personas"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Dificultad -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ra" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="Fácil"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Ingredientes y Tip Experto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Ingredientes -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:text="INGREDIENTES"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500g At ipsum vitae est lac."
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250g Maecenas elit orci, gravida."
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Tip Experto -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:text="Tip Experto"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:text="Morbi dictum. Vestibulum pulvinar quam."
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Elaboración -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="112dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:text="ELABORACIÓN"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Paso 1: Lorem ipsum dolor sit."
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Paso 2: Lorem ipsum dolor sit."
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Paso 3: Lorem ipsum dolor sit."
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Más recetas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mas_recetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Más recetas"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/color7"
        android:layout_gravity="center" />

</LinearLayout>